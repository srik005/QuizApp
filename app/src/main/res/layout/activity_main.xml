<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.srikanth.quizapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.Who is the CEO of Google?"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_question_one"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/ans1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LarryPage"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark" />

            <RadioButton
                android:id="@+id/ans1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sergey Brin"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark" />

            <RadioButton
                android:id="@+id/ans1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sundar Pichai"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark" />
        </RadioGroup>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rGroup"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/txt_question_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_marginTop="5dp"
            android:text="2.Google HeadQuarters is located at"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_question_two"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/ans2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="California"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark"/>

            <RadioButton
                android:id="@+id/ans2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Florida"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark"/>

            <RadioButton
                android:id="@+id/ans2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michigan"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark"/>
        </RadioGroup>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rGroup1"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/txt_question_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_marginTop="5dp"
            android:text="3.Who is the cofounder of android"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_question_three"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/ans3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Andy Rubin"
                android:textColor="@android:color/holo_red_dark"/>

            <RadioButton
                android:id="@+id/ans3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Jack Dorsey"
                android:textColor="@android:color/holo_red_dark"/>

            <RadioButton
                android:id="@+id/ans3c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Lary Ellison"
                android:textColor="@android:color/holo_red_dark"/>
        </RadioGroup>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rGroup3"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/txt_question_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_marginTop="5dp"
            android:text="4.Android N stands for"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_question_four"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/ans4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                android:text="Nougat" />

            <RadioButton
                android:id="@+id/ans4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                android:text="Nutella" />

            <RadioButton
                android:id="@+id/ans4c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                android:text="Nankhatai" />
        </RadioGroup>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rGroup4"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:layout_marginTop="10dp"
            android:text="Submit" />
    </RelativeLayout>
</ScrollView>
